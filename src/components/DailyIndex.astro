    display: flex;
    justify-content: start;
    align-items: center; /* Ensures everything is on the same baseline  */
    gap: 1.5rem;
    margin-bottom: 2rem;
  }

  .month-title {
    font-size: 1.4rem;
    font-weight: bold;
    color: var(--sl-color-white);
    margin: 0 !important; /* Preserves your specific spacing  */
    min-width: 200px;
    text-align: center;
    line-height: 1; /* Forces the text box to match the font height */
  }

  .nav-arrow {
    background: var(--sl-color-gray-6);
    border: 1px solid var(--sl-color-gray-5);
    color: var(--sl-color-white);
    border-radius: 10px;
    width: 42px;
    height: 42px;
    cursor: pointer;
    margin-top: 0px;

    /* Perfect Centering Logic */
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 0;
    line-height: 0;
    transition: all 0.2s;
  }

  .nav-arrow:hover {
    background: var(--sl-color-gray-5);
    border-color: var(--sl-color-accent);
  }

  .daily-container {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    margin-top: 2rem;
  }
  .daily-row {
    display: flex;
    align-items: center;
    gap: 1rem;
  }
  .date-side {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    min-width: 70px;
  }
  .dot {
    width: 8px;
    height: 8px;
    border-radius: 50%;
  }
  .date-label {
    display: flex;
    flex-direction: column;
    text-align: center;
  }
  .day-num {
    font-size: 1.2rem;
    font-weight: bold;
    color: var(--sl-color-white);
    line-height: 1;
  }
  .day-name {
    font-size: 0.7rem;
    color: var(--sl-color-gray-3);
    font-weight: bold;
  }
  .story-card {
    flex: 1;
    padding: 1rem;
    border-radius: 1rem;
    color: white;
    text-decoration: none;
    transition: transform 0.2s;
    box-shadow: var(--sl-shadow-sm);
  }
  .story-card:hover {
    transform: scale(1.02);
  }
  .card-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
  }
  .title {
    margin: 0 !important;
    font-size: 1.1rem;
    color: white !important;
  }
  .tags {
    margin-top: 0.5rem;
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
  }
  .tag {
    font-size: 0.65rem;
    opacity: 0.8;
    font-weight: bold;
    text-transform: uppercase;
  }
  .red {
    background-color: #ff5a5f;
  }
  .green {
    background-color: #90e0c0;
    color: #1e3a2f;
  }
  .green .title,
  .green .tag {
    color: #1e3a2f !important;
  }
  .dot.red {
    background-color: #ff5a5f;
  }
  .dot.green {
    background-color: #90e0c0;
  }
</style>
