---
import { Icon } from "@astrojs/starlight/components";
import { getCollection } from "astro:content";

const allDailies = await getCollection("docs", ({ id }) => {
  return id.startsWith("daily-drops/");
});

const sortedDailies = allDailies
  .filter((entry) => entry.data.date)
  .sort((a, b) => b.data.date.getTime() - a.data.date.getTime());

const formatDate = (date) => {
  const d = new Date(date);
  return {
    day: d.getDate().toString().padStart(2, "0"),
    weekday: d.toLocaleDateString("en-US", { weekday: "short" }).toUpperCase(),
    monthYear: d.toLocaleDateString("en-US", {
      month: "long",
      year: "numeric",
    }),
    filterKey: d.getFullYear() + "-" + d.getMonth(),
  };
};
---

<div class="month-nav">
  <button id="prevMonth" class="nav-arrow" type="button">
    <span><Icon name="left-arrow" /></span>
  </button>
  <h2 id="monthDisplay" class="month-title">Daily Drops</h2>
  <button id="nextMonth" class="nav-arrow" type="button">
    <span><Icon name="right-arrow" /></span>
  </button>
</div>

<div class="daily-container">
  {
    sortedDailies.map((entry) => {
      const dateInfo = formatDate(entry.data.date);
      const isEven = parseInt(dateInfo.day) % 2 === 0;

      const rowClass = "daily-row filterable-row";
      const dotClass = isEven ? "dot green" : "dot red";
      const cardClass = isEven ? "story-card green" : "story-card red";
      const itemHref = "/" + entry.id;

      return (
        <div
          class={rowClass}
          data-month={dateInfo.filterKey}
          data-label={dateInfo.monthYear}
        >
          <div class="date-side">
            <div class={dotClass} />
            <div class="date-label">
              <span class="day-num">{dateInfo.day}</span>
              <span class="day-name">{dateInfo.weekday}</span>
            </div>
          </div>

          <a href={itemHref} class={cardClass}>
            <div class="card-header">
              <h3 class="title">{entry.data.title}</h3>
              <span class="icon">ðŸ“–</span>
            </div>
            <div class="tags">
              {entry.data.tags?.map((tag) => (
                <span class="tag">#{tag}</span>
              ))}
            </div>
          </a>
        </div>
      );
    })
  }
</div>

<script>
  const rows = document.querySelectorAll(".filterable-row");
  const monthDisplay = document.getElementById("monthDisplay");
  const prevBtn = document.getElementById("prevMonth");
  const nextBtn = document.getElementById("nextMonth");

  // Get unique months from the data attributes
  const availableMonths = [
    ...new Set(Array.from(rows).map((r) => r.getAttribute("data-month"))),
  ]
    .sort()
    .reverse();

  let currentIndex = 0;

  function updateFilter() {
    const currentKey = availableMonths[currentIndex];
    let displayLabel = "";

    rows.forEach((row) => {
      if (row.getAttribute("data-month") === currentKey) {
        (row as HTMLElement).style.display = "flex";
        displayLabel = row.getAttribute("data-label") || "";
      } else {
        (row as HTMLElement).style.display = "none";
      }
    });

    if (monthDisplay) monthDisplay.textContent = displayLabel;
    if (prevBtn)
      (prevBtn as HTMLElement).style.opacity =
        currentIndex === availableMonths.length - 1 ? "0.2" : "1";
    if (nextBtn)
      (nextBtn as HTMLElement).style.opacity = currentIndex === 0 ? "0.2" : "1";
  }

  prevBtn?.addEventListener("click", () => {
    if (currentIndex < availableMonths.length - 1) {
      currentIndex++;
      updateFilter();
    }
  });

  nextBtn?.addEventListener("click", () => {
    if (currentIndex > 0) {
      currentIndex--;
      updateFilter();
    }
  });

  if (availableMonths.length > 0) updateFilter();
</script>

<style>
